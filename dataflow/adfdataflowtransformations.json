{
	"name": "adfdataflowtransformations",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "lssqldblinkedservice",
						"type": "LinkedServiceReference"
					},
					"name": "sqlsource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureNewSQLTable",
						"type": "DatasetReference"
					},
					"name": "adfsqlserver"
				}
			],
			"transformations": [
				{
					"name": "fullname"
				}
			],
			"scriptLines": [
				"parameters{",
				"     inputparamter as integer",
				"}",
				"source(output(",
				"          ID as integer,",
				"          FirstName as string,",
				"          LastName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'query',",
				"     store: 'sqlserver',",
				"     query: 'SELECT * FROM DBO.EMP',",
				"     isolationLevel: 'READ_UNCOMMITTED') ~> sqlsource",
				"sqlsource derive(fullname = concat(FirstName,' ',LastName),",
				"          idfirstname = concat(toString(ID),' - ', FirstName)) ~> fullname",
				"fullname sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> adfsqlserver"
			]
		}
	}
}